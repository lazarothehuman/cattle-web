<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-amber-teal</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-amber-teal</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-blue-orange</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-blue-orange</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-bluegrey-teal</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-bluegrey-teal</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-brown-cyan</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-brown-cyan</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-cyan-amber</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-cyan-amber</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-deeporange-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-deeporange-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-green-yellow</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-green-yellow</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-indigo-yellow</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-indigo-yellow</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-lime-purple</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-lime-purple</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-olympia-purple-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-olympia-purple-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-olympia.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/olympia/component/*</include>
            </includes>
        </fileSet>
    </fileSets>
    
</assembly>